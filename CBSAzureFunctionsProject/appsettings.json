{
  "IsEncrypted": false,
  "Values": {
    "AzureWebJobsStorage": "UseDevelopmentStorage=true",
    "FUNCTIONS_WORKER_RUNTIME": "dotnet-isolated",
    
    "AzureSignalR:ConnectionString": "Endpoint=https://your-signalr-service.service.signalr.net;AccessKey=your-access-key;Version=1.0;",
    "AzureSignalR:HubName": "ChatHub",
    "AzureSignalR:ServiceUrl": "https://your-signalr-service.service.signalr.net",
    "AzureSignalR:Sku": "Standard",
    "AzureSignalR:Capacity": "1",
    
    "Authentication:JwtSecretKey": "your-super-secret-jwt-key-here-make-it-long-and-secure",
    "Authentication:JwtIssuer": "your-app-issuer",
    "Authentication:JwtAudience": "your-app-audience",
    "Authentication:JwtExpirationMinutes": "60",
    
    "Chat:MaxCachedMessages": "1000",
    "Chat:MaxUsersPerChat": "1000",
    "Chat:MaxMessagesPerSecond": "10",
    "Chat:EnableMessagePersistence": "true",
    
    "Connection:TimeoutSeconds": "30",
    "Connection:EnableAutoReconnect": "true",
    "Connection:MaxReconnectAttempts": "5",
    "Connection:ReconnectionDelaySeconds": "5",
    
    "Logging:EnableSignalRLogging": "true",
    "Logging:SignalRLogLevel": "Information",
    
    "Security:EnableCors": "true",
    "Security:EnableMessageEncryption": "false",
    
    "Performance:EnableMessageCompression": "true",
    "Performance:CompressionThresholdBytes": "1024",
    "Performance:EnableConnectionPooling": "true",
    "Performance:MaxPoolSize": "100",
    
    "Monitoring:EnableApplicationInsights": "true",
    "Monitoring:AppInsightsInstrumentationKey": "your-app-insights-instrumentation-key",
    
    "Environment": "Development",
    
    "PlayFab:TitleId": "your-playfab-title-id",
    "PlayFab:DeveloperSecretKey": "your-playfab-developer-secret-key"
  },
  
  "Host": {
    "LocalHttpPort": 7071,
    "CORS": "*",
    "CORSCredentials": false
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "CBS.SignalR": "Information"
    }
  }
} 